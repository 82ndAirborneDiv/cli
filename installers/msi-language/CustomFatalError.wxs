<?xml version="1.0" encoding="UTF-8"?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
		<UI>
			<Dialog Id="CustomFatalError" Width="370" Height="270" Title="!(loc.FatalError_Title)">
				<Control Id="Finish" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Cancel="yes" Text="!(loc.WixUIFinish)">
					<Publish Event="EndDialog" Value="Exit">1</Publish>
				</Control>
				<Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Disabled="yes" Text="!(loc.WixUICancel)" />
				<Control Id="Bitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="234" TabSkip="no" Text="!(loc.FatalErrorBitmap)" />
				<Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Disabled="yes" Text="!(loc.WixUIBack)" />
				<Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
				<Control Id="Title" Type="Text" X="135" Y="20" Width="220" Height="60" Transparent="yes" NoPrefix="yes" Text="!(loc.FatalErrorTitle)" />
				<Control Id="Description1" Type="Text" X="135" Y="70" Width="220" Height="40" Transparent="yes" Hidden="yes" NoPrefix="yes" Text="!(loc.FatalErrorDescription1)">
					<Condition Action="show">NETWORK_ERROR = "false"</Condition>
				</Control>
				<Control Id="CustomTextFatalError" Type="Hyperlink" X="135" Y="110" Width="220" Height="20" Transparent="yes" Hidden="yes" Text="!(loc.FatalErrorPrimary)">
					<Condition Action="show">NETWORK_ERROR = "false"</Condition>
				</Control>
				<Control Id="CustomTextNetworkError" Type="Text" X="135" Y="50" Width="220" Height="60" Transparent="yes" Hidden="yes" Text="!(loc.NetworkErrorPrimary)">
					<Condition Action="show">NETWORK_ERROR = "true"</Condition>
				</Control>
				<Control Id="CustomTextNetworkErrorDetails" Type="Text" X="135" Y="110" Width="220" Height="80" Transparent="yes" Hidden="yes" Text="!(loc.NetworkErrorDetails)">
					<Condition Action="show">NETWORK_ERROR = "true"</Condition>
				</Control>
				<Control Id="CustomTextNetworkErrorReporting" Type="Hyperlink" X="135" Y="200" Width="220" Height="20" Transparent="yes" Hidden="yes" Text="!(loc.NetworkErrorReporting)">
					<Condition Action="show">NETWORK_ERROR = "true"</Condition>
				</Control>
				<Control Id="Description2FatalError" Type="Text" X="135" Y="140" Width="220" Height="20" Transparent="yes" Hidden="yes" NoPrefix="yes" Text="!(loc.FatalErrorDescription2)">
					<Condition Action="show">NETWORK_ERROR = "false"</Condition>
				</Control>
			</Dialog>

			<InstallUISequence>
				<!-- Custom action that will display this dialog after setting property values -->
				<Custom Action="SetNetworkError" OnExit="error">NOT REMOVE~="ALL"</Custom>
			</InstallUISequence>

			<AdminUISequence>
				<!-- Custom action that will display this dialog after setting property values -->
				<Custom Action="SetNetworkError" OnExit="error">NOT REMOVE~="ALL"</Custom>
			</AdminUISequence>
		</UI>
	</Fragment>
</Wix>
